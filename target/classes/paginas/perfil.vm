<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil do Usuário</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #eee8d8;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .profile-container {
            background-color: #f7f7f7;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 800px;
            margin: auto;
            position: relative;
        }
        .profile-container h2 {
            text-align: center;
            color: #5c6bc0;
            margin-bottom: 20px;
        }
        .profile-container label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }
        .profile-container .field-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        .profile-container .field-container input,
        .profile-container .field-container textarea {
            width: 75%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        .profile-container .field-container button {
            padding: 10px;
            background-color: #d2b36d;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }
        .profile-container .field-container button:hover {
            background-color: #b39654;
        }
        .profile-container .popup {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 10;
            width: 80%;
            max-width: 400px;
            border-radius: 8px;
        }
        .profile-container .popup.active {
            display: block;
        }
        .profile-container .popup h3 {
            margin-top: 0;
        }
        .profile-container .popup input,
        .profile-container .popup textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        .profile-container .popup button {
            width: 100%;
            padding: 10px;
            background-color: #5c6bc0;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }
        .profile-container .popup button:hover {
            background-color: #3f51b5;
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <h2>Perfil do Usuário</h2>
        <div class="field-container">
            <label for="nomecompleto">Nome Completo</label>
            <input type="text" id="nomecompleto" name="nomecompleto" value="$!{usuario.nomeCompleto}" readonly>
            <button type="button" onclick="openPopup('nomecompleto')">Editar</button>
        </div>
        <div class="field-container">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" value="$!{usuario.email}" readonly>
            <button type="button" onclick="openPopup('email')">Editar</button>
        </div>
        <div class="field-container">
            <label for="telefone">Telefone</label>
            <input type="tel" id="telefone" name="telefone" value="$!{usuario.telefone}" readonly>
            <button type="button" onclick="openPopup('telefone')">Editar</button>
        </div>
        <div class="field-container">
            <label for="senha">Senha</label>
            <input type="password" id="senha" name="senha" value="******" readonly>
            <button type="button" onclick="openPopup('senha')">Editar</button>
        </div>
        <div class="field-container">
            <label for="nome_faculdade">Nome da Faculdade</label>
            <input type="text" id="nome_faculdade" name="nome_faculdade" value="$!{usuario.nomeFaculdade}" readonly>
            <button type="button" onclick="openPopup('nome_faculdade')">Editar</button>
        </div>
        <div class="field-container">
            <label for="descricao">Descrição</label>
            <textarea id="descricao" name="descricao" readonly>$!{usuario.descricao}</textarea>
            <button type="button" onclick="openPopup('descricao')">Editar</button>
        </div>
        <div class="field-container">
            <label for="curso">Curso</label>
            <input type="text" id="curso" name="curso" value="$!{usuario.curso}" readonly>
            <button type="button" onclick="openPopup('curso')">Editar</button>
        </div>
        <div class="field-container">
            <label for="ano_previsto_conclusao">Ano Previsto para Conclusão</label>
            <input type="text" id="ano_previsto_conclusao" name="ano_previsto_conclusao" value="$!{usuario.anoPrevistoConclusao}" readonly>
            <button type="button" onclick="openPopup('ano_previsto_conclusao')">Editar</button>
        </div>
    </div>
    
    <!-- Pop-up form -->
    <div class="popup" id="popup">
        <h3>Editar <span id="field-name"></span></h3>
        <form id="popup-form" action="/updateProfile" method="post">
            <input type="hidden" id="field-id" name="field-id">
            <input type="text" id="field-value" name="field-value">
            <button type="submit">Salvar</button>
        </form>
    </div>

    <script>
        function openPopup(field) {
            document.getElementById('popup').classList.add('active');
            document.getElementById('field-name').innerText = field;
            document.getElementById('field-id').value = field;
            document.getElementById('field-value').value = document.getElementById(field).value;
        }
        
        // Close the popup when clicking outside of it
        window.onclick = function(event) {
            const popup = document.getElementById('popup');
            if (event.target === popup) {
                popup.classList.remove('active');
            }
        }
    </script>
</body>
</html>
